## docker-compose.yml largely lifted from https://github.com/dodeeric/omeka-s-docker/blob/master/docker-compose-traefik.yml

version: '3.2'

networks:
  private:
  public:
    external:
      name: traefik_webgateway

services:

  mariadb:
    image: mariadb:latest
    restart: always
    networks:
      - private
    volumes:
      - mariadb:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: blabla
      MYSQL_DATABASE: omeka
      MYSQL_USER: omeka
      MYSQL_PASSWORD: omeka
    labels:
      - "traefik.enable=false"

  pma:
    depends_on:
      - mariadb
    image: phpmyadmin/phpmyadmin:latest
    restart: always
    networks:
      - private
      - public
    links:
      - mariadb:db
    labels:
      traefik.backend: pma
      traefik.frontend.rule: "Host: dgdocker2.grinnell.edu; PathPrefixStrip: /pma"
      # traefik.frontend.redirect.regex: "^(.*)/pma$$"
      # traefik.frontend.redirect.replacement: "$$1/pma/"
      # traefik.frontend.rule: "PathPrefix: /pma; ReplacePathRegex: ^/pma/(.*) /$$1"
      # traefik.frontend.rule: "Host: omeka-s.grinnell.edu; PathPrefixStrip: /pma"
      # traefik.frontend.rule: "Host:pma.localhost"

  omeka:
    depends_on:
      - mariadb
    image: dodeeric/omeka-s:latest
    restart: always
    networks:
      - private
      - public
    links:
      - mariadb:db
    volumes:
      - omeka:/var/www/html/volume
    labels:
      traefik.backend: omeka
      traefik.frontend.rule: "Host: dgdocker2.grinnell.edu; PathPrefixStrip: /omeka; ReplacePathRegex: ^/omeka/(.*) /omeka/$$1"
      # traefik.frontend.rule: "Host: dgdocker2.grinnell.edu; PathPrefixStrip: /omeka"
      # traefik.frontend.redirect.regex: "^(.*)/omeka$$"
      # traefik.frontend.redirect.replacement: "$$1/omeka/"
      # traefik.frontend.rule: "PathPrefix: /omeka; ReplacePathRegex: ^/omeka/(.*) /omeka/$$1"
      # traefik.frontend.rule: "Host: omeka-s.grinnell.edu"
      # traefik.frontend.rule: "Host: omeka.localhost"

  # gramps:
